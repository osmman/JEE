<?xml version="1.0" encoding="UTF-8"?>
<datasources xmlns="http://www.ironjacamar.org/doc/schema/datasources_1_1.xsd"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://www.ironjacamar.org/doc/schema/datasources_1_1.xsd ">
    <datasource jndi-name="jdbc/arquillian"
                pool-name="ArquillianEmbeddedH2Pool" enabled="true"
                use-java-context="true">
        <connection-url>jdbc:h2:mem:arquillian;DB_CLOSE_DELAY=-1</connection-url>
        <driver>h2</driver>
    </datasource>
</datasources>
